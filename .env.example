# gpasswd Environment Variables Example
# Copy this file to .env for local development (never commit .env!)

# Development mode
# Set to "true" to enable debug logging and verbose output
GPASSWD_DEBUG=false

# Custom vault location (overrides default ~/.gpasswd/)
# GPASSWD_VAULT_DIR=/custom/path/to/vault

# Custom config file location
# GPASSWD_CONFIG_FILE=/custom/path/to/config.yaml

# Disable color output (useful for CI/CD)
# GPASSWD_NO_COLOR=false

# Session timeout override (in seconds)
# GPASSWD_SESSION_TIMEOUT=300

# Clipboard clear timeout override (in seconds)
# GPASSWD_CLIPBOARD_TIMEOUT=30

# Test mode (uses temporary vault for testing)
# GPASSWD_TEST_MODE=false

# Log level: debug, info, warn, error
# GPASSWD_LOG_LEVEL=info

# Disable clipboard auto-clear (for development only)
# GPASSWD_DISABLE_CLIPBOARD_CLEAR=false

# Enable profiling (for performance analysis)
# GPASSWD_ENABLE_PROFILING=false
# GPASSWD_PROFILE_PATH=/tmp/gpasswd.prof

# CI/CD settings
# CI=false
# GPASSWD_CI_MODE=false

# Argon2 parameters override (for testing with lower values)
# WARNING: Never use these in production!
# GPASSWD_ARGON2_TIME=1
# GPASSWD_ARGON2_MEMORY=8192
# GPASSWD_ARGON2_THREADS=2

# SQLite settings
# GPASSWD_SQLITE_BUSY_TIMEOUT=5000
# GPASSWD_SQLITE_JOURNAL_MODE=WAL

# Network settings (future, for sync features)
# GPASSWD_SYNC_ENABLED=false
# GPASSWD_SYNC_URL=https://sync.example.com
# GPASSWD_SYNC_TOKEN=your-sync-token

# Backup settings
# GPASSWD_BACKUP_ENABLED=true
# GPASSWD_BACKUP_DIR=~/.gpasswd/backups
# GPASSWD_MAX_BACKUPS=10

# Security settings
# GPASSWD_MIN_PASSWORD_LENGTH=12
# GPASSWD_MAX_FAILED_ATTEMPTS=5
# GPASSWD_LOCKOUT_DURATION=30

# Development helpers
# GPASSWD_SKIP_PASSWORD_VALIDATION=false
# GPASSWD_ALLOW_WEAK_PASSWORDS=false
# GPASSWD_TEST_MASTER_PASSWORD=test123  # NEVER USE IN PRODUCTION!
