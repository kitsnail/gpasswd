# EditorConfig is awesome: https://EditorConfig.org
# gpasswd Editor Configuration

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4
# Go uses tabs by convention

[go.mod]
indent_style = tab
indent_size = 4

[go.sum]
indent_style = tab
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
# Markdown uses trailing whitespace for line breaks

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Git config files
[.gitconfig]
indent_style = tab
indent_size = 4

[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile]
indent_style = space
indent_size = 2

[docker-compose.yml]
indent_style = space
indent_size = 2

# CI/CD configs
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size: 2

[.gitlab-ci.yml]
indent_style = space
indent_size = 2

# Documentation
[*.txt]
indent_style = space
indent_size = 2

[LICENSE]
indent_style = space
indent_size = 2

[README.md]
indent_style = space
indent_size = 2
max_line_length = 120

# Configuration files
[*.toml]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 2

# Web files (if any)
[*.{html,css,js,ts}]
indent_style = space
indent_size = 2

# Python (if used for tooling)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Ruby (if used for tooling)
[*.rb]
indent_style = space
indent_size = 2

# SQL files (if any)
[*.sql]
indent_style = space
indent_size = 2

# Proto files (if any)
[*.proto]
indent_style = space
indent_size = 2
